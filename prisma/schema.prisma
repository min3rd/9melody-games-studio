generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

// User model matching common Google account / profile fields
model User {
  id            Int       @id @default(autoincrement())
  googleId      String?   @unique
  email         String    @unique
  username      String?   @unique
  // store hashed password (nullable for OAuth-only users)
  passwordHash  String?   @map("password_hash")
  // flag to disable account (prevents login)
  disabled      Boolean   @default(false)
  // session version for global logout; increment to revoke all sessions
  sessionVersion Int      @default(0) @map("session_version")
  // optional role for auth & authorization (e.g., admin/user)
  role          String    @default("user")
  emailVerified Boolean?  @map("email_verified")
  name          String?
  givenName     String?   @map("given_name")
  familyName    String?   @map("family_name")
  picture       String?
  locale        String?
  hd            String?   // hosted domain (if GSuite)
  profile       String?   // profile url
  accessToken   String?   @map("access_token")
  refreshToken  String?   @map("refresh_token")
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}
